<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mahesaiqbal.justjava.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama_anda"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/edtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nama"
            android:inputType="textPersonName"
            android:capitalize="words"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topping"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/ckGula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gula"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/ckKrim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/krim"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/ckLollipop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lollipop"
            android:textSize="16sp" />
        <CheckBox
            android:id="@+id/ckKopi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kopi"
            android:textSize="16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnTambah"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/plus"
                android:textSize="16sp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="tambah"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/txtJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/btnKurang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/minus"
                android:textSize="16sp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="kurang"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harga"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pesan"
            android:onClick="pesan"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
